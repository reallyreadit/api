@model api.Messaging.Views.CommentViewModel

<div style="margin:1em 0;">@Model.Author replied to your comment on <a href="@Model.ReadArticleUrl" style="font-weight:bold;font-style:italic;color:#2A2326;">@Model.Article</a></div>
<div style="margin:1em 0;padding:0.75em;border-left:0.3em solid #ddd;border-radius:0.5em;background-color:#fafafa;">@Html.Raw(Model.Text)</div>
<div style="margin:1em 0;text-align:center;">
	<a href="@Model.ViewCommentUrl" style="display:inline-block;padding:15px;background-color:#73A3D9;color:white;font-weight:bold;text-decoration:none;">View on Readup</a>
</div>