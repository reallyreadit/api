@model api.Messaging.Views.EmailLayoutViewModel

@{ var footerColorStyle = "color: darkgray;"; }

<!DOCTYPE html>
<html>
	<head>
		<title>@Model.Title</title>
	</head>
	<body>
		<div style="max-width:600px;margin:0 auto;padding:10px 0 0 0;text-align:center;font-size:13px;font-family:monospace;">
			@RenderBody()
			<p style="@footerColorStyle">
				<a href="@Model.WebServerEndpoint.CreateUrl()" style="@footerColorStyle">reallyread.it</a> |
				<a href="mailto:support@reallyread.it" style="@footerColorStyle">support@@reallyread.it</a>
			</p>
			@RenderSection("UnsubscribeNotice", required: false)
		</div>
	</body>
</html>